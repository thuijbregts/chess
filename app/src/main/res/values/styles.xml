<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="PromotionDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="PlayerPieces">
        <item name="android:layout_width">344dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayerPiecesHeader">
        <item name="android:layout_width">344dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/player_header_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerPiecesContainer">
        <item name="android:layout_width">344dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/player_container_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="PlayerPiecesImage">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

</resources>
